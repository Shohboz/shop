<div class="container">

  <p id="notice"><%= notice %></p>

  <% breadcrumb :depot, @product %>


  <div class="row">
    <div class="col l8 m8">
      <div class="col l12 m12">       

        <ul>
          <li>
            <!--div class="section"-->
              <h4>
                <%= @product.title %>
              </h4>
              <p>Код товара для заказа по телефону: 
                <b>
                  <text class="red-text"><%= @product.article %></text>
                </b>
              </p>
            <!--/div-->
          </li>
        </ul>

      </div>
      <div class="col l12 m12">
        <%= image_tag(@product.image_url, class: "materialboxed", width: "400") %>
      </div>
    </div>
    <div class="col l4 m4">
      <div class="card-panel white">
        <div style="padding: 0.5rem;">
          <!--span class="red-text"-->
          <p>Цена:</p>
          <h4 class="red-text">
            <b><%= number_to_currency(@product.price) %></b>
          </h4>

          <hr>
          <!--/span-->
          <p>Количество:</p>
          <div class="buttons group row">
            <ul class="qnt-count col m12">
              <li class="col m3">
                <a class="incr-btn" href="#">-</a>
              </li>
              <li class="col m6">
                <input id="quantity" class="form-control" type="text" value="2">
              </li>
              <li class="col m3">
                <a class="incr-btn" href="#">+</a>
              </li>
            </ul>
          </div>

          <hr>

          <%= link_to 'Добавить в корзину', line_items_path(product_id: @product), class: "btn btn-large red waves-effect waves-light", method: :post %>
          <!--button class="btn btn-large red waves-effect waves-light" type="submit" name="action">Добавить в корзину      
          </button-->

        </div>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col l12 m12">
      
    </div>
  </div>

  <ul class="collection with-header">
    <li class="collection-header">
      <div class="section">
        <h5>Информация</h5>
        <!--p>Show</p-->
      </div>
    </li>

    <li class="collection-item">
      <%= sanitize @product.description %>
    </li>
  </ul>

  <!--%= link_to 'Back', depot_path %-->
  <!--%= link_to 'Back', :back %-->

</div>