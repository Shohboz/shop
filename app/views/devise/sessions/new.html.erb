<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="collection with-header">
    <h2 class="header-list-container header collection-header">Войти</h2>
    <div class="collection-item">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label "Электронная почта" %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label "Пароль" %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <br />

        <div class="actions">
          <%= link_to 'Войти', '', class: "btn btn-large red accent-2 waves-effect waves-light", onclick: "$('form').submit()" %>
          <%= f.submit nil, style: "display: none;" %>
        </div>
      <% end %>

      <br />

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>